<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="TTS.UI.EditIO"
	x:Name="Window"
	Title="Редактирование входного/выходного файла"
	Width="300" Height="150" ResizeMode="NoResize" Icon="/TTS.UI;component/Pictures/Check.png">

	<Grid x:Name="LayoutRoot">
		
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="0.3*"/>
		</Grid.RowDefinitions>
		
		<RichTextBox x:Name="Text_RichTextBox" Grid.Row="0" Margin="3" VerticalScrollBarVisibility="Visible"/>
		
		<Grid Grid.Row="1">
					
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			
			<Button x:Name="Save_Button" Margin="3" Content="Save" Click="Save_Button_Click"/>
			<Button x:Name="Cancel_Button" Grid.Column="1" Content="Cancel" Margin="3" Click="Cancel_Button_Click"/>
			
		</Grid>

	</Grid>
		
</Window>
