<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Declarations="clr-namespace:TTS.Core.Abstract.Declarations;assembly=TTS.Core.Abstract"
	mc:Ignorable="d"
	x:Class="TTS.UI.UserControls.RequirementSetupControl"
	x:Name="UserControl"
	MinWidth="100" MinHeight="25" HorizontalAlignment="Stretch">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="RequirementTypeComboBox" Grid.Column="0" Margin="5" HorizontalAlignment="Stretch" SelectedIndex="0">
            <Declarations:CharacteristicType>MaxExecutionTime</Declarations:CharacteristicType>
            <Declarations:CharacteristicType>MaxMemoryUsage</Declarations:CharacteristicType>
            <Declarations:CharacteristicType>MaxCPUUsage</Declarations:CharacteristicType>
        </ComboBox>
        <TextBox x:Name="RequirementValueTextBox" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch"/>

    </Grid>
</UserControl>