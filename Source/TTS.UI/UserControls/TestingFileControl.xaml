<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:TTS.UI.UserControls"
	mc:Ignorable="d"
	x:Class="TTS.UI.UserControls.TestingFileControl"
	x:Name="UserControl"
	d:DesignWidth="150" d:DesignHeight="22" MinHeight="22" Width="Auto" MinWidth="150">

    <Border BorderBrush="Black" BorderThickness="1">

        <Grid x:Name="LayoutRoot" Background="White">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition  Width="20"/>
                <ColumnDefinition Width="22"/>
            </Grid.ColumnDefinitions>

            <Label ToolTip="{Binding filePath}" Name="FilePathLabel" Grid.Column="0" Margin="2" FontSize="12" Padding="0" AllowDrop="True">                
            </Label>

            <Ellipse Name="ResultFileEllipse" Grid.Column="1" Margin="4" Fill="White" Stroke="Black"/>
            
            <Button Name="DeLeteButton" Grid.Column="2" BorderBrush="White" Foreground="White" Click="DeleteButton_OnClick">
                <Button.Background>
                    <ImageBrush ImageSource="/TTS.UI;component/Pictures/Delete.png"/>
                </Button.Background>
            </Button>

        </Grid>

    </Border>
</UserControl>