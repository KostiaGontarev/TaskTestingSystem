<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="TTS.UI.UserControls.buttonIO"
	x:Name="UserControl"
	d:DesignWidth="180" d:DesignHeight="22" Height="Auto" MinHeight="25" MaxHeight="25">

	<Grid x:Name="LayoutRoot">
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition Width="0.30*"/>
		</Grid.ColumnDefinitions>
		
		<TextBox Grid.Column="0" Margin="2" x:Name="InputTextBox" PreviewMouseDown="InputFile_OnPreviewMouseDown">
		</TextBox>
		
		<TextBox Grid.Column="1" Margin="2" AllowDrop="True" x:Name="OutputTextBox" PreviewMouseDown="OutputFile_OnPreviewMouseDown">
		</TextBox>
		
		<Button x:Name="Delete_Files_Button" Grid.Column="2" Margin="2" BorderBrush="White" Foreground="White" Click="DeleteFiles_OnButtonClick">
			<Button.Background>
				<ImageBrush ImageSource="/TTS.UI;component/Pictures/Delete.png"/>
			</Button.Background>
		</Button>
		
	</Grid>	
	
</UserControl>