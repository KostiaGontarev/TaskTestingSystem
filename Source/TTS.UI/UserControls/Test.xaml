<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="TTS.UI.Test"
	x:Name="UserControl"
	d:DesignWidth="150" d:DesignHeight="22" MinHeight="22" Width="Auto" MinWidth="100">
	
	<Border BorderBrush="Black" BorderThickness="1">
		
		<Grid x:Name="LayoutRoot" Background="White" HorizontalAlignment="Left" Width="148">
		
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition  Width="22"></ColumnDefinition>
			</Grid.ColumnDefinitions>
		
			<Label x:Name="TestNameLabel" Grid.Column="0" Margin="2,2,0,2" FontSize="12" Padding="0" HorizontalAlignment="Left" Width="122"></Label>
			
			<Ellipse Grid.Column="1" Margin="2" Fill="White" Stroke="Black"/>
			
		</Grid>
		
	</Border>
	
</UserControl>