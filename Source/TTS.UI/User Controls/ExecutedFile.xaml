<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="TTS.UI.UserControls.Exec_file"
	x:Name="UserControl"
	d:DesignWidth="150" d:DesignHeight="22" MinHeight="22" Width="Auto" MinWidth="190">

	<Border BorderBrush="Black" BorderThickness="1">
		
		<Grid x:Name="LayoutRoot" Background="White">
		
			<Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"></ColumnDefinition>
				<ColumnDefinition Width="72*"></ColumnDefinition>
				<ColumnDefinition  Width="22"></ColumnDefinition>
			</Grid.ColumnDefinitions>
            
            <CheckBox Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
		
			<Label Grid.Column="1" Margin="2" FontSize="12" Padding="0" AllowDrop="True"></Label>
			
			<Ellipse Grid.Column="2" Margin="2" Fill="White"/>
			
		</Grid>
		
	</Border>
</UserControl>